
@if (ShowDialog)
{
    <div class="modal fade show d-block" id="deviceAddModalWindow" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-lg modal-dialog-centered modal-dialog-scrollable">
            <div class="modal-content">
                <div class="modal-header">
                    <h3 class="modal-title">Add New Item</h3>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" @onclick="@Close"></button>
                </div>
                <div class="modal-body">
                    @if (Saved == false)
                    {
                        @if (ShowSpinner)
                        {
                            <div class="mt-3 align-content-center">
                                <img src="/img/Spin-1s-200px.png" />
                            </div>
                        }
                        else
                        {
                            <EditForm Model="@DeviceCtrl" id="editForm" class="editForm" OnValidSubmit="@HandleValidSubmit" OnInvalidSubmit="@HandleInvalidSubmit">
                                <DataAnnotationsValidator />
                                <div class="text-start text-danger fs-6">
                                    <ValidationSummary />
                                </div>
                                <div class="input-group mb-3">
                                    <span class="input-group-text d-block text-end">Device ID:</span>
                                    <InputText id="deviceId" class="form-control" @bind-Value="@DeviceCtrl.DeviceId" readonly></InputText>
                                    <CustomValidationMessage Class="ms-2 text-danger fs-4" For="@(() => DeviceCtrl.DeviceId)" UseExclamationIcon="true" />
                                </div>
                                <div class="input-group mb-3">
                                    <span class="input-group-text d-block text-end">Level A To:</span>
                                    <InputNumber id="levelATo" class="form-control" @bind-Value="@DeviceCtrl.LevelATo"></InputNumber>
                                    <CustomValidationMessage Class="ms-2 text-danger fs-4" For="@(() => DeviceCtrl.LevelATo)" UseExclamationIcon="true" />
                                </div>
                                <div class="input-group mb-3">
                                    <span class="input-group-text d-block text-end">Level B To:</span>
                                    <InputNumber id="levelBTo" class="form-control" @bind-Value="@DeviceCtrl.LevelBTo"></InputNumber>
                                    <CustomValidationMessage Class="ms-2 text-danger fs-4" For="@(() => DeviceCtrl.LevelBTo)" UseExclamationIcon="true" />
                                </div>
                                <div class="input-group mb-3">
                                    <span class="input-group-text d-block text-end">Level C To:</span>
                                    <InputNumber id="levelCTo" class="form-control" @bind-Value="@DeviceCtrl.LevelCTo"></InputNumber>
                                    <CustomValidationMessage Class="ms-2 text-danger fs-4" For="@(() => DeviceCtrl.LevelCTo)" UseExclamationIcon="true" />
                                </div>
                                <div class="input-group mb-3">
                                    <span class="input-group-text d-block text-end">Monitoring Hour:</span>
                                    <InputNumber id="monitoringHour" class="form-control" @bind-Value="@DeviceCtrl.MonitoringHour"></InputNumber>
                                    <CustomValidationMessage Class="ms-2 text-danger fs-4" For="@(() => DeviceCtrl.MonitoringHour)" UseExclamationIcon="true" />
                                </div>

                                <div class="input-group mb-3">
                                    <span class="input-group-text d-block text-end">Nelson Rule:</span>
                                    <InputText id="nelsonRule" class="form-control" @bind-Value="@DeviceCtrl.NelsonRule"></InputText>
                                    <CustomValidationMessage class="ms-2 text-danger fs-4" For="@(() => DeviceCtrl.NelsonRule)" UseExclamationIcon="true" />
                                </div>
                            </EditForm>
                        }
                    }
                    else
                    {
                        <div class="alert @StatusClass">@Message</div>
                    }
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" @onclick="@Close">Close</button>
                    @if (Saved == false)
                    {
                        <button type="submit" form="editForm" class="btn btn-primary edit-btn">Save</button>
                    }
                </div>
            </div>
        </div>
    </div>
}
