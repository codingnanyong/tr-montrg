@page "/admin/grpkeys"

<div class="mb-3">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href="/admin">Admin</a></li>
            <li class="breadcrumb-item active" aria-current="page">Group Key</li>
        </ol>
    </nav>
</div>

<section class="jumbotron text-center">
    <div class="container">
        <div class="page-header">
            <h1>Group Key</h1>
        </div>
        <!-- -->
        <div class="card card-block">
            <div class="card-header">
                <h3></h3>
            </div>
            <div class="card-body">
                @if (IsDataLoaded == false)
                {
                    <div class="mt-3 align-content-center">
                        <img src="/img/Spin-1s-200px.png" />
                    </div>
                }
                else
                {
                    <a href="@($"/admin/grpkeys/add")" class="btn btn-lg">
                        <i class="fas fa-plus-circle"></i>
                    </a>
                    <button class="btn btn-lg text-primary" @onclick="ShowGrpKeyAddDialog">
                        <i class="fas fa-plus-circle"></i>
                    </button>
                    <GrpKeyAddDialog @ref="GrpKeyAddDialog" CloseEventCallback="@GrpKeyAddDialog_OnDialogClose" />
                    <table id="frame_info" class="table table-sm table-bordered">
                        <thead class="table-light text-center">
                            <tr>
                                <th scope="col">Group</th>
                                <th scope="col">Key</th>
                                <th scope="col">Description</th>
                                <th scope="col">Order</th>
                                <th scope="col">Inactive</th>
                                <th scope="col">&nbsp;</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (GrpKeys != null)
                            {
                                @foreach (var grpKey in GrpKeys)
                                {
                                    <tr>
                                        <td class="align-middle">@grpKey.Group</td>
                                        <td class="align-middle">@grpKey.Key</td>
                                        <td class="align-middle">@grpKey.Description</td>
                                        <td class="align-middle">@grpKey.Order</td>
                                        <td class="align-middle">
                                            <input class="form-check-input disabled" type="checkbox" value="@grpKey.Inactive" onclick="return false;">
                                        </td>
                                        <td class="align-middle fs-4">
                                            <a href="@($"/admin/grpkeys/edit/{grpKey.Group}/{grpKey.Key}")" class="btn btn-lg text-primary">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                }

                <a class="btn btn-outline-primary ms-2" @onclick="@NavigateToAdminHome">Back to Admin Home</a>
            </div>
        </div>
    </div>
</section>