@page "/admin/mailingaddrs/{PlantId}"

<div class="mb-3">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href="/admin">Admin</a></li>
            <li class="breadcrumb-item active" aria-current="page">@(PlantId) Mailing Address</li>
        </ol>
    </nav>
</div>

<section class="jumbotron text-center">
    <div class="container">
        <div class="page-header">
            <h1>@(PlantId) Mailing Address</h1>
        </div>
        <!-- -->
        <div class="card card-block">
            <div class="card-header">
                <h3>Overview</h3>
            </div>
            <div class="card-body">
                @if (IsDataLoaded == false)
                {
                    <div class="mt-3 align-content-center">
                        <img src="/img/Spin-1s-200px.png" />
                    </div>
                }
                else
                {
                    <a href="@($"/admin/mailingaddrs/add/{PlantId}")" class="btn btn-lg">
                        <i class="fas fa-plus-circle"></i>
                    </a>
                    <button class="btn btn-lg text-primary" @onclick="ShowMailingAddrAddDialog">
                        <i class="fas fa-plus-circle"></i>
                    </button>
                    <MailingAddrAddDialog @ref="MailingAddrAddDialog" CloseEventCallback="@MailingAddrDialog_OnDialogClose" PlantId="@PlantId" />
                    <table id="frame_info" class="table table-sm table-bordered">
                        <thead class="table-light text-center">
                            <tr>
                                <th scope="col">Plant ID</th>
                                <th scope="col">Email</th>
                                <th scope="col">Name</th>
                                <th scope="col">Telephone</th>
                                <th scope="col">Team</th>
                                <th scope="col">Inactive</th>
                                <th scope="col">&nbsp;</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (MailingAddrs != null)
                            {
                                @foreach (var mailingAddr in MailingAddrs)
                                {
                                    <tr>
                                        <td class="align-middle">@mailingAddr.PlantId</td>
                                        <td class="align-middle">@mailingAddr.Email</td>
                                        <td class="align-middle">@mailingAddr.Name</td>
                                        <td class="align-middle">@mailingAddr.Telephone</td>
                                        <td class="align-middle">@mailingAddr.Team</td>
                                        <td class="align-middle">
                                            <input class="form-check-input disabled" type="checkbox"
                                                   value="@mailingAddr.Inactive"
                                                   checked="@mailingAddr.Inactive"
                                                   onclick="return false;">
                                        </td>
                                        <td class="align-middle fs-4">
                                            <a href="@($"/admin/mailingaddrs/edit/{mailingAddr.PlantId}/{mailingAddr.Email}")" class="btn btn-lg text-primary">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                }

                <a class="btn btn-outline-primary ms-2" @onclick="@NavigateToAdminHome">Back to Admin Home</a>
            </div>
        </div>
    </div>
</section>