@*@page "/admin/devices"*@
@page "/admin/devices/{PlantId}"

<div class="mb-3">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href="/admin">Admin</a></li>
            <li class="breadcrumb-item active" aria-current="page">@(PlantId) Devices</li>
        </ol>
    </nav>
</div>

<section class="jumbotron text-center">
    <div class="container">
        <div class="page-header">
            <h1>
                @(PlantId) Devices
            </h1>
        </div>
        <!-- -->
        <div class="card card-block">
            <div class="card-header">
                <h3>Overview</h3>
            </div>
            <div class="card-body">
                @if (Devices == null)
                {
                    <div class="mt-3 align-content-center">
                        <img src="/img/Spin-1s-200px.png" />
                    </div>
                }
                else
                {
                    <a href="@($"/admin/devices/add/{PlantId}")" class="btn btn-lg">
                        <i class="fas fa-plus-circle"></i>
                    </a>
                    <button class="btn btn-lg text-primary" @onclick="ShowDeviceAddDialog">
                        <i class="fas fa-plus-circle"></i>
                    </button>
                    <DeviceAddDialog @ref="DeviceAddDialog" PlantId="@PlantId" CloseEventCallback="@DeviceAddDialog_OnDialogClose" />
                    <table id="frame_info" class="table table-sm table-bordered">
                        <thead class="table-light text-center">
                            <tr>
                                <th scope="col">Device ID</th>
                                <th scope="col">Location ID</th>
                                <th scope="col">Plant ID</th>
                                <th scope="col">Name</th>
                                <th scope="col">IP</th>
                                <th scope="col">Description</th>
                                <th scope="col">&nbsp;</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var device in Devices)
                            {
                                <tr>
                                    <td class="align-middle">@device.DeviceId</td>
                                    <td class="align-middle">@device.LocationId</td>
                                    <td class="align-middle">@device.PlantId</td>
                                    <td class="align-middle">@device.Name</td>
                                    <td class="align-middle">@device.IpAddress</td>
                                    <td class="align-middle">@device.Description</td>
                                    <td class="align-middle fs-4">
                                        <div class="dropdown">
                                            <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                                Menu
                                            </button>
                                            <ul class="dropdown-menu dropdown-menu-dark">
                                                <li>
                                                    <a href="@($"/{device.PlantId}/{device.LocationId}/{device.DeviceId}")" class="btn btn-lg text-primary">
                                                        <i class="fas fa-info-circle"></i>
                                                    </a>
                                                    <a href="@($"/admin/devices/edit/{device.PlantId}/{device.DeviceId}")" class="btn btn-lg text-primary">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                </li>
                                                <li><hr class="dropdown-divider"></li>
                                                <li>
                                                    <a href="@($"/admin/devicectrls/{device.PlantId}/{device.DeviceId}")" class="dropdown-item">
                                                        Device Control
                                                    </a>
                                                </li>
                                                <li>
                                                    <a href="@($"/admin/framectrls/{device.PlantId}/{device.DeviceId}")" class="dropdown-item">
                                                        Frame Control
                                                    </a>
                                                </li>
                                                <li>
                                                    <a href="@($"/admin/roictrls/{device.PlantId}/{device.DeviceId}")" class="dropdown-item">
                                                        ROI Control
                                                    </a>
                                                </li>
                                                <li>
                                                    <a href="@($"/admin/boxctrls/{device.PlantId}/{device.DeviceId}")" class="dropdown-item">
                                                        Box Control
                                                    </a>
                                                </li>
                                            </ul>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }

                <a class="btn btn-outline-primary ms-2" @onclick="@NavigateToAdminHome">Back to Admin Home</a>
            </div>
        </div>
    </div>
</section>